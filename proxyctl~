
proxy="http://web-proxy.jp.hpecorp.net:8080"

case "$1" in
set )
	export http_proxy=$proxy
	export https_proxy=$proxy
	;;

setall )
	export http_proxy=$proxy
	export https_proxy=$proxy
	npm config set https-proxy $proxy
	;;

unset )
	unset http_proxy;
	unset https_proxy;
	;;

unsetall )
	unset http_proxy;
	unset https_proxy;
	npm config delete https-proxy
	;;

info )
	echo "ENV: http_proxy=$http_proxy";
	echo "ENV: https_proxy=$https_proxy";
	echo -n "npm config :"; npm config get https-proxy;
	;;

* )
	cat <<EOF
usage : \$ . $0 { set | unset | info }"
  proxy is : $proxy"

  check please using the follwing command.
	\$ env |grep proxy

  ## CAUTION ##
    this script direct run
        OK: \$ . $0
    instead of standard run
        NG: \$ $0
EOF
	;;
esac
